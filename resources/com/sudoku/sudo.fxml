<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<!--
English: Sudoku UI layout
Español: Diseño de la interfaz de Sudoku
-->

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sudoku.GameController">

    <!-- Top bar with timer -->
    <top>
        <Label fx:id="timerLabel" text="⏱ 0s" BorderPane.alignment="CENTER" />
    </top>

    <!-- Center: Sudoku grid -->
    <center>
        <GridPane fx:id="sudokuGrid" gridLinesVisible="true" BorderPane.alignment="CENTER" />
    </center>

    <!-- Bottom bar with buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Button fx:id="pauseButton" onAction="#onPauseGame" text="Pause / Pausar" />
            <Button fx:id="startButton" onAction="#onStartGame" text="Start / Iniciar" />
            <Button fx:id="helpButton" onAction="#onHelp" text="Help / Ayuda" />
            <Button fx:id="finishButton" onAction="#onFinish" text="End / Finalizar" />
        </HBox>
    </bottom>

</BorderPane>
